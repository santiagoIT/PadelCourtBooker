<UserControl x:Class="PadelCourtBooker.App.UserControls.ConsoleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PadelCourtBooker.App.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <GroupBox Grid.Row="0" Height="Auto" Margin="5">
      <ScrollViewer x:Name="OutputScrollViewer" VerticalScrollBarVisibility="Auto">
        <TextBlock x:Name="OutputTextBlock" TextWrapping="Wrap" FontFamily="Lucida Console" Padding="5" Margin="5" Background="Black"></TextBlock>
      </ScrollViewer>
    </GroupBox>
  </Grid>
</UserControl>
